{
  "name": "claude-code-ai-collab-mcp",
  "version": "1.0.0",
  "description": "Claude Code AI Collaboration MCP Server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e",
    "validate-config": "node scripts/validate-config.js",
    "validate-config:dev": "node scripts/validate-config.js config/development.yaml",
    "validate-config:prod": "node scripts/validate-config.js config/production.yaml",
    "verify-deepseek": "node scripts/verify-deepseek.js",
    "fix-imports": "node scripts/fix-imports.js",
    "docker:build": "docker build -t claude-code-ai-collab-mcp .",
    "docker:run": "docker run -p 3000:3000 claude-code-ai-collab-mcp",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:local": "scripts/deploy.sh local development",
    "deploy:docker": "scripts/deploy.sh docker production",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}'",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "security:audit": "pnpm audit",
    "deps:update": "pnpm update",
    "deps:check": "pnpm outdated",
    "setup:claude-code": "scripts/setup-claude-code.sh"
  },
  "keywords": [
    "mcp",
    "ai",
    "collaboration",
    "claude",
    "deepseek",
    "openai",
    "o3",
    "anthropic"
  ],
  "author": "Claude Code AI Collaboration Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.6.0",
    "config": "^3.3.9",
    "inversify": "^6.0.2",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.14",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "optionalDependencies": {
    "prom-client": "^15.1.0",
    "redis": "^4.6.0"
  },
  "packageManager": "pnpm@10.12.4"
}